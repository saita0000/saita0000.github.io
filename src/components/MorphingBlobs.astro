  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const blobs = document.querySelectorAll('.blob');
      const container = document.querySelector('.morphing-container');
      
      window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;
        const heroHeight = window.innerHeight;
        const fadeRatio = Math.min(scrollPosition / (heroHeight * 0.6), 1);
        
        blobs.forEach((blob) => {
          blob.style.opacity = Math.max(0.7 - fadeRatio, 0);
        });
      });
      
      if (container) {
        document.addEventListener('mousemove', (e) => {
          const mouseX = e.clientX / window.innerWidth - 0.5;
          const mouseY = e.clientY / window.innerHeight - 0.5;
          
          const blobSvg = document.querySelector('.blob-svg');
          if (blobSvg) {
            blobSvg.style.transform = `translate(${mouseX * 30}px, ${mouseY * 30}px)`;
          }
        });
      }
    });
  </script>